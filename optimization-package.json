{
  "name": "z-portfolio-optimized",
  "version": "2.0.0",
  "description": "Optimized portfolio website for Zhengyuan Zhao - Interaction Designer",
  "main": "index-optimized.html",
  "scripts": {
    "dev": "concurrently \"npm run serve:static\" \"npm run serve:frontend\"",
    "serve:static": "http-server . -p 8080 -c-1 --cors",
    "serve:frontend": "cd frontend && npm start",
    "server": "node backend/src/index.js",
    "build": "npm run build:css && npm run build:js && npm run build:html && npm run build:assets",
    "build:css": "npm run css:compile && npm run css:prefix && npm run css:minify",
    "build:js": "npm run js:bundle && npm run js:minify",
    "build:html": "npm run html:minify && npm run html:inline",
    "build:assets": "npm run assets:images && npm run assets:fonts && npm run assets:videos",
    "css:compile": "node-sass styles/ -o dist/styles/ --output-style expanded",
    "css:prefix": "postcss dist/styles/*.css --use autoprefixer -d dist/styles/",
    "css:minify": "cleancss -o dist/styles/main.min.css dist/styles/*.css",
    "js:bundle": "rollup -c rollup.config.js",
    "js:minify": "terser dist/js/bundle.js -o dist/js/bundle.min.js --compress --mangle",
    "html:minify": "html-minifier --input-dir . --output-dir dist --file-ext html --config-file html-minifier.json",
    "html:inline": "inline-source dist/*.html dist/",
    "assets:images": "imagemin 'Sources/*.{jpg,png,svg}' --out-dir=dist/images --plugin=imagemin-webp --plugin=imagemin-avif",
    "assets:fonts": "cp Sources/*.{ttf,otf,woff,woff2} dist/fonts/",
    "assets:videos": "cp Sources/*.{mp4,webm} dist/videos/",
    "optimize": "npm run build && npm run analyze",
    "analyze": "npm run analyze:bundle && npm run analyze:performance",
    "analyze:bundle": "webpack-bundle-analyzer dist/js/bundle.js",
    "analyze:performance": "lighthouse https://zzyyyyyyyyyyyyyy.github.io --output-path=./lighthouse-report.html",
    "test": "npm run test:html && npm run test:css && npm run test:js && npm run test:performance",
    "test:html": "html-validate *.html",
    "test:css": "stylelint 'styles/**/*.css'",
    "test:js": "eslint 'js/**/*.js'",
    "test:performance": "lighthouse-ci",
    "clean": "rimraf dist/",
    "deploy": "npm run build && npm run test && gh-pages -d dist",
    "preview": "npm run build && serve -s dist -l 3000",
    "format": "prettier --write '**/*.{html,css,js,json,md}'",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'styles/**/*.css' --fix",
    "lint:js": "eslint 'js/**/*.js' --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zzyyyyyyyyyyyyyy/Zzyyyyyyyyyyyyyy.github.io.git"
  },
  "keywords": [
    "portfolio",
    "interaction-design",
    "ui-ux",
    "motion-design",
    "static-site",
    "performance"
  ],
  "author": {
    "name": "Zhengyuan Zhao",
    "email": "z.zhengyuanZhao@gmail.com",
    "url": "https://zzyyyyyyyyyyyyyy.github.io"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "gh-pages": "^6.0.0",
    "html-minifier": "^4.0.0",
    "html-validate": "^8.5.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-avif": "^0.1.5",
    "imagemin-webp": "^8.0.0",
    "inline-source": "^8.0.2",
    "lighthouse": "^11.2.0",
    "lighthouse-ci": "^0.12.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^14.2.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.22.0",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "dependencies": {
    "gsap": "^3.12.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{html,css,js,json,md}": [
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}